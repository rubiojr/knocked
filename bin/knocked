#!/usr/bin/ruby
begin
  require 'knocked'
rescue Exception
  require "#{File.dirname(__FILE__) + '/../lib/knocked.rb'}"
end

zone = ask('zone: ')
begin
  w = NocDns::WebApp.login
  puts w.list_domains(zone)
rescue NocDns::InvalidSettings => e
  puts e.message
rescue Exception => e 
  puts e.message
end
